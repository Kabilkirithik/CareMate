# CareMate Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# LLM Configuration
# ============================================================================
OPENAI_API_KEY=your_openai_api_key_here
MODEL_NAME=gpt-4-turbo-preview
# Alternative models: gpt-4o, gpt-4o-mini, claude-sonnet-4-5-20250929 (via Anthropic)
TEMPERATURE=0.3
MAX_TOKENS=4000

# Alternative LLM Providers
# ANTHROPIC_API_KEY=your_anthropic_key_here
# AZURE_OPENAI_API_KEY=your_azure_key_here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://caremate_user:secure_password@localhost:5432/caremate_db
# For production, use connection pooling:
# DATABASE_URL=postgresql+psycopg2://user:password@host:port/database?pool_size=10&max_overflow=20

# ============================================================================
# Redis Configuration (for conversation memory and caching)
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# ============================================================================
# Hospital System Integration
# ============================================================================
HOSPITAL_SYSTEM_API_URL=https://hospital-ehr.example.com/api/v1
HOSPITAL_API_KEY=your_hospital_system_api_key
HOSPITAL_API_TIMEOUT=30

# ============================================================================
# Speech and Translation Services (Azure or alternatives)
# ============================================================================
# Azure Speech Services
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=eastus
SPEECH_TO_TEXT_LANGUAGE=en-US

# Azure Translator
AZURE_TRANSLATOR_KEY=your_azure_translator_key
AZURE_TRANSLATOR_REGION=global
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com

# Text-to-Speech
TTS_VOICE_NAME=en-US-JennyNeural
TTS_VOICE_STYLE=friendly

# ============================================================================
# Notification Services
# ============================================================================
# Email
SMTP_SERVER=smtp.hospital.org
SMTP_PORT=587
SMTP_USERNAME=caremate@hospital.org
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=caremate@hospital.org

# SMS (Twilio or similar)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications (Firebase or similar)
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_PROJECT_ID=caremate-notifications

# ============================================================================
# Security & Encryption
# ============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
ENCRYPTION_KEY=your_base64_encoded_encryption_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================================================
# HIPAA Compliance
# ============================================================================
AUDIT_LOG_RETENTION_DAYS=2555
ENABLE_PHI_ENCRYPTION=true
ENABLE_ACCESS_LOGGING=true
AUDIT_LOG_BACKUP_PATH=/var/backups/caremate/audit_logs

# ============================================================================
# CrewAI Settings
# ============================================================================
CREWAI_VERBOSE=true
CREWAI_MEMORY_ENABLED=true
CREWAI_MAX_ITERATIONS=5
CREWAI_CACHE_ENABLED=true

# ============================================================================
# Rate Limiting & Performance
# ============================================================================
# Per patient
MAX_REQUESTS_PER_MINUTE=10
MAX_REQUESTS_PER_HOUR=60

# System-wide
MAX_CONCURRENT_SESSIONS=100
MAX_LLM_TOKENS_PER_DAY=1000000
REQUEST_TIMEOUT_SECONDS=30

# ============================================================================
# Monitoring & Observability
# ============================================================================
# Prometheus
PROMETHEUS_PORT=9090
ENABLE_METRICS=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/caremate/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# External monitoring (optional)
DATADOG_API_KEY=
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# ============================================================================
# Application Settings
# ============================================================================
ENVIRONMENT=development
DEBUG=false
API_PORT=8000
API_HOST=0.0.0.0
CORS_ORIGINS=["http://localhost:3000", "https://caremate-dashboard.hospital.org"]

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_EMERGENCY_DETECTION=true
ENABLE_DISTRESS_DETECTION=true
ENABLE_MULTILINGUAL_SUPPORT=true
ENABLE_VOICE_EMOTION_DETECTION=false
ENABLE_PREDICTIVE_NEEDS=false

# ============================================================================
# Hospital Policy Configuration
# ============================================================================
EMERGENCY_RESPONSE_SLA_SECONDS=60
HIGH_URGENCY_RESPONSE_SLA_SECONDS=180
MEDIUM_URGENCY_RESPONSE_SLA_SECONDS=300
LOW_URGENCY_RESPONSE_SLA_SECONDS=900

# ============================================================================
# Development & Testing
# ============================================================================
USE_MOCK_HOSPITAL_API=true
USE_MOCK_NOTIFICATIONS=true
ENABLE_TEST_ENDPOINTS=false
